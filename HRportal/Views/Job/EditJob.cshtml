@model HRportal.Models.Job
@{
    ViewBag.Title = "EditJob";
}

@using (Html.BeginForm())
{


    <div class="form-horizontal">
        <h4>Edit Job</h4>
        @Html.ActionLink("Back to List", "Jobs", "Job")
        <hr />

        <div class="form-group">
            <label class="control-label col-md-4">Job Position:</label>
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.JobPosition, new {@class = "form-control"})
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-4">Job Description:</label>
            <div class="col-md-10">
                @Html.TextAreaFor(model => model.JobDescription, new { @class = "form-control"})

            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-4">Job Requirements:</label>
            <div class="col-md-10">
                @Html.TextAreaFor(model => model.JobRequirements, new { @class = "form-control"})
            </div>
        </div>

        <div class="form-group">
      
                <input type="submit" value="Save" class="btn btn-success" />
     
        </div>
    </div>
}


